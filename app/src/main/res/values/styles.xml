<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoTitle" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="input_field" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textColor">@color/black_high_importancy</item>
        <item name="android:textColorHint">@color/black_disabled</item>
        <item name="android:background">@drawable/background_input</item>
    </style>

    <style name="logo" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">@color/black_high_importancy</item>
    </style>

</resources>
